---
import BaseLayout from '../layouts/BaseLayout.astro'
import TopLayout from '../layouts/TopLayout.astro'
import BottomLayout from '../layouts/BottomLayout.astro'
import ProjectCard from '../components/ProjectCard.astro'
import { PROJECTS_LIST } from '../lib/constants'
---

<BaseLayout
  title="Portfolio"
  description="Projects"
>
  <main class="flex min-h-[80vh] flex-auto flex-col" transition:animate="slide">
    <TopLayout>
      <h2
        class="scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0"
      >
        Projects
      </h2>
    </TopLayout>
    <BottomLayout size="xl">
      <div class="flex w-full flex-wrap justify-center gap-2">
        {
          PROJECTS_LIST.map((entry: any) => (
            <ProjectCard
              href={entry?.link}
              heading={entry?.title}
              subheading={entry?.description}
              imagePath={entry?.image}
              altText={entry?.alttext}
              class="w-full sm:w-2/5"
            />
          ))
        }
      </div>
    </BottomLayout>
  </main>
</BaseLayout>